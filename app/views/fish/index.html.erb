<h1>Listing fish</h1>

<table>
  <thead>
    <tr>
      <th>Species</th>
      <th>Location</th>
      <th>Bait</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fish.each do |fish| %>
      <tr>
        <td><%= image_tag fish.image.url(:medium) %></td>
        <td><%= fish.species %></td>
        <td><%= fish.location %></td>
        <td><%= fish.bait %></td>
        <td><%= link_to 'Show', fish %></td>
        <% if fish.user == current_user %>
        <td><%= link_to 'Edit', edit_fish_path(fish) %></td>
        <td><%= link_to 'Destroy', fish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fish', new_fish_path %>
